! Window Size
URxvt*geometry: 240x84

! Font & Size
URxvt.font: xft:monospace:size=12 

! Cursor Color
URxvt.cursorColor: Magenta

! Remove Scroll Bar
URxvt.scrollBar: false

! Dracula Xresources palette
*.foreground: #F8F8F2
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #BD93F9
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6


! Background
URxvt.intensityStyles:	false
URxvt.background:       [70]#000000
URxvt.depth:		    32


!Rebind Copy & Paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Perl Extensions UNABLE TO GET WORKING
!URxvt.perl-ext-common: fullscreen
!URxvt.keysym.Shift-M: perl:fullscreen.switch

